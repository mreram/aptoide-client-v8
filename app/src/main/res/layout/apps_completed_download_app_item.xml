<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_completed_download_card"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      >

    <ImageView
        android:id="@+id/apps_downloads_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp"
        android:contentDescription="@null"
        tools:background="@mipmap/ic_launcher"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/apps_downloads_icon"
        android:layout_toRightOf="@id/apps_downloads_icon"
        android:orientation="vertical"
        >

      <TextView
          android:id="@+id/apps_downloads_app_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="4dp"
          android:ellipsize="end"
          android:maxLines="1"
          tools:text="Application Name"
          style="@style/Aptoide.TextView.Regular.M.BlackAlpha"
          />

      <TextView
          android:id="@+id/apps_downloads_download_state"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:maxLines="1"
          android:text="@string/apps_short_ready_to_install"
          style="@style/Aptoide.TextView.Regular.XS.BlackAlpha"
          />

    </LinearLayout>

  </RelativeLayout>

</android.support.v7.widget.CardView>
