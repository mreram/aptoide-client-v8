<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navdrawer_chosen_account_height"
    android:background="@color/aptoide_orange"
    android:orientation="vertical"
    >

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/img_navdrawer_wallpaper"
      android:scaleType="centerInside"
      />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingEnd="@dimen/keyline_1"
      android:paddingLeft="@dimen/keyline_1"
      android:paddingRight="@dimen/keyline_1"
      android:paddingStart="@dimen/keyline_1"
      android:paddingTop="@dimen/keyline_1"
      >

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/navdrawer_profile_image_size"
        android:layout_height="@dimen/navdrawer_profile_image_size"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="23dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_user_circle"
        android:tint="@color/white"
        />

    <TextView
        android:id="@+id/profile_email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="16dp"
        android:singleLine="true"
        android:text="Aptoider@hotmail.com"
        android:textColor="@color/navdrawer_body_text_2_inverse"
        android:textSize="@dimen/text_size_medium"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/profile_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_email_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Aptoider"
        android:textColor="@color/navdrawer_body_text_1_inverse"
        android:textSize="@dimen/text_size_large"
        android:visibility="gone"
        tools:visibility="visible"
        />

  </RelativeLayout>

</FrameLayout>
